<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xl.backen.dao.ComplaintCommentMapper">

    <resultMap type="com.xl.backen.entity.ComplaintComment" id="ComplaintCommentMap">
        <result property="uuid" column="uuid" jdbcType="VARCHAR"/>
        <result property="complaintUuid" column="complaint_uuid" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="files" column="files" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="flag" column="flag" jdbcType="INTEGER"/>
        <result property="createId" column="create_id" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result column="u_create_name" jdbcType="VARCHAR" property="truename"/>
        <result column="u_head_pic" jdbcType="VARCHAR" property="headPic"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ComplaintCommentMap">
        select
          uuid, complaint_uuid, content, files, create_time, flag, create_id, update_time
        from db_backen.tb_complaint_comment
        <where>
            <if test="uuid != null and uuid != ''">
                and uuid = #{uuid},
            </if>
        </where>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ComplaintCommentMap">
        select
        uuid, complaint_uuid, content, files, create_time, flag, create_id, update_time
        from db_backen.tb_complaint_comment
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="ComplaintCommentMap">
        select
          t.*,  u.truename as u_create_name , u.head_pic as u_head_pic
        from db_backen.tb_complaint_comment t left join tb_peoples u on u.uuid = t.create_id
        <where>
            <if test="uuid != null and uuid != ''">
                and t.uuid = #{uuid},
            </if>
            <if test="complaintUuid != null and complaintUuid != ''">
                and t.complaint_uuid = #{complaintUuid},
            </if>
            <if test="content != null and content != ''">
                and t.content = #{content},
            </if>
            <if test="files != null and files != ''">
                and t.files = #{files},
            </if>
            <if test="createTime != null">
                and t.create_time = #{createTime},
            </if>
            <if test="flag != null">
                and t.flag = #{flag},
            </if>
            <if test="createId != null and createId != ''">
                and t.create_id = #{createId},
            </if>
            <if test="updateTime != null">
                and t.update_time = #{updateTime},
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="uuid" useGeneratedKeys="true">
        insert into db_backen.tb_complaint_comment(complaint_uuid, content, files, create_time, flag, create_id, update_time)
        values (#{complaintUuid}, #{content}, #{files}, #{createTime}, #{flag}, #{createId}, #{updateTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update db_backen.tb_complaint_comment
        <set>
            <if test="complaintUuid != null and complaintUuid != ''">
                and complaint_uuid = #{complaintUuid},
            </if>
            <if test="content != null and content != ''">
                and content = #{content},
            </if>
            <if test="files != null and files != ''">
                and files = #{files},
            </if>
            <if test="createTime != null">
                and create_time = #{createTime},
            </if>
            <if test="flag != null">
                and flag = #{flag},
            </if>
            <if test="createId != null and createId != ''">
                and create_id = #{createId},
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime},
            </if>
        </set>
        where uuid = #{uuid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from db_backen.tb_complaint_comment where uuid = #{uuid}
    </delete>

</mapper>